<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Disease and Ingredient Management</title>
  <script>
    function updateTestResult(diseaseId, testIndex, isPositive) {
      fetch('/update_test_result', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ diseaseId, testIndex, isPositive })
      }).then(response => response.json())
        .then(data => {
          if (data.success) {
            window.location.reload();
          }
        });
    }
  </script>
</head>
<body>

  <!-- Search Form -->
  <h1>Search Problem Name</h1>
  <form action="/search" method="POST">
    <input type="text" name="problem" placeholder="Enter problem name">
    <button type="submit">Search</button>
  </form>

  <% if (typeof diseases !== 'undefined' && diseases.length > 0) { %>
    <!-- Display Disease Information -->
    <h2>Disease Information</h2>
    <ul>
      <% diseases.forEach(diseaseName => { %>
        <li>
          <h3><%= diseaseName.disease_name %></h3>
          <p><%= diseaseName.disease_info %></p>
          <ul>
            <% JSON.parse(diseaseName.confirmTest).forEach((test, index) => { %>
              <li>
                <%= test %>
                <button onclick="updateTestResult(<%= diseaseName.id %>, <%= index %>, true)">Positive</button>
                <button onclick="updateTestResult(<%= diseaseName.id %>, <%= index %>, false)">Negative</button>
              </li>
            <% }) %>
          </ul>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <% if (typeof confirmedDiseases !== 'undefined' && confirmedDiseases.length > 0) { %>
    <!-- Confirm Disease -->
    <h2>Confirmed Diseases</h2>
    <ul>
      <% confirmedDiseases.forEach(diseaseName => { %>
        <li>
          <h3><%= diseaseName.disease_name %></h3>
          <p><%= diseaseName.disease_info %></p>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <% if (typeof results !== 'undefined' && results.length > 0) { %>
    <!-- Inherited Ingredients Information -->
    <h2>Inherited Ingredients Information</h2>
    <ul>
      <% results.forEach(result => { %>
        <li>
          <h3><%= result.diseaseName.disease_name %></h3>
          <ul>
            <% result.ingredients.forEach(ingredient => { %>
              <li>
                <p>Ingredient Name: <%= ingredient.ingredient_name %></p>
                <p>Time Period: <%= ingredient.time_period %></p>
                <p>Quantity: <%= ingredient.quantity %></p>
                <p>Prandial: <%= ingredient.prandial %></p>
                <p>Time Duration: <%= ingredient.time_duration %></p>
                <a href="<%= ingredient.details_link %>">Details</a>
              </li>
            <% }) %>
          </ul>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Search Ingredients Form -->
  <h2>Search Ingredients</h2>
  <form action="/search_ingredients" method="POST">
    <input type="text" name="main_conditions" placeholder="Enter age">
    <input type="text" name="problem" placeholder="Enter problem name">
    <button type="submit">Search</button>
  </form>

  <% if (typeof ingredients !== 'undefined' && ingredients.length > 0) { %>
    <!-- Display Ingredient Search Results -->
    <h2>Ingredient Search Results</h2>
    <table>
      <thead>
        <tr>
          <th>Ingredient Name</th>
          <th>Time Period</th>
          <th>Quantity</th>
          <th>Prandial</th>
          <th>Time Duration</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% ingredients.forEach(ingredient => { %>
          <tr>
            <td><%= ingredient.ingredient_name %></td>
            <td><%= ingredient.time_period %></td>
            <td><%= ingredient.quantity %></td>
            <td><%= ingredient.prandial %></td>
            <td><%= ingredient.time_duration %></td>
            <td><a href="<%= ingredient.details_link %>">Details</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
