<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stock Out History</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #cfd9df 0%, #789caf 100%);
      margin: 0;
      padding: 0;
    }

    .container {
      width: 96%;
      margin: 20px auto;
      background: linear-gradient(135deg, #c3e9ca 0%, #77e08a 100%);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      color: #333333;
    }

    form {
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
    }

    form input[type="text"] {
      padding: 5px;
      margin-right: 10px;
      border: 1px solid #cccccc;
      border-radius: 5px;
    }

    form button {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      cursor: pointer;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    table,
    th,
    td {
      border: 1px solid #cccccc;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }

    th,
    td {
      text-align: center;
    }

    .nav1 {
      height: 100%;
      width: 100%;
      display: flex;
      /* justify-content: space-between; */
      background: linear-gradient(135deg, #c3e9ca 0%, #77e08a 100%);
      padding: 20px;
      color: white;
      font-weight: bold;
    }


    .nav-left a,
    .nav-right a {
      color: white;
      text-decoration: none;
      padding: 0 20px;
    }

    .nav-left a:hover,
    .nav-right a:hover {
      background: linear-gradient(135deg, #c3e9ca 0%, #77e08a 100%);
    }
  </style>
</head>

<body>
  <div class="nav1">
    <div class="nav-left"><a href="/dash_board">Desh Board</a></div>
    <div class="nav-left"><a href="/compnay-admin-profile">Profile</a></div>
    <div class="nav-right"><a href="/compnay-panel">Panel</a></div>
    <div class="nav-right"><a href="/shop-order-view">Order</a></div>
    <div class="nav-right"><a href="/compnay_all_history">History Panel</a></div>

  </div>
  <div class="container">
    <h2>Company Stock Out History</h2>
    <form action="/company_stock_out_history-search" method="POST">
      <input type="text" name="product_id" placeholder="Search by Product ID">
      <input type="text" name="product_name" placeholder="Search by Product Name">
      <input type="text" name="company" placeholder="Search by Company">
      <input type="text" name="date_time" placeholder="Search by Date Time">
      <button type="submit">Search</button>
    </form>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Product ID</th>
          <th>Product Name</th>
          <th>Product PCS</th>
          <th>Weight</th>
          <th>Company</th>
          <th>Product Type</th>
          <th>Single Price</th>
          <th>Box Price</th>
          <th>Discount</th>
          <th>Quantity</th>
          <th>A/D/B Price</th>
          <th>Date Time</th>
        </tr>
      </thead>
      <tbody>
        <% history.forEach(item=> { %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= item.product_id %>
            </td>
            <td>
              <%= item.product_name %>
            </td>
            <td>
              <%= item.product_pcs %>
            </td>
            <td>
              <%= item.weight %>
            </td>
            <td>
              <%= item.company %>
            </td>
            <td>
              <%= item.product_type %>
            </td>
            <td>
              <%= item.single_price %>
            </td>
            <td>
              <%= item.box_price %>
            </td>
            <td>
              <%= item.discount %>
            </td>
            <td>
              <%= item.quantity %>
            </td>
            <td>
              <%= item.a_d_b_price %>
            </td>
            <td>
              <%= new Date(item.date_time).toLocaleDateString('en-GB') %>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</body>

</html>