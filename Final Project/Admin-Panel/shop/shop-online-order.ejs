<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product panel</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f3f3;
            margin: 0;
            padding: 0;
        }
        .nav1{

background-color: rgb(235, 222, 222);

width: 100%;

margin: 20px 0px;
display: flex;
justify-content: center;
align-items: center;
justify-content: space-around;
text-decoration: none;
}
.nav-left-1 a{
font-family: 'Dancing Script', cursive;
font-weight: bold;
text-decoration: none;
color: rgb(243, 237, 237);

font-size: 35px;
}

.nav-left a{
font-weight: bold;
color: rgb(142, 139, 139);
text-decoration: none;
font-size: 30px;
}
.nav-left a:hover {
font-weight: bold;
color: rgb(84, 78, 78);
text-decoration: none;
font-size: 30px;
}
        .container {
            width: 90%;
            margin: 20px auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333333;
        }

        .search-form {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-form label {
            font-weight: bold;
        }

        .search-form input[type="text"],
        .search-form select {
            padding: 8px;
            border: 1px solid #cccccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .search-form input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 20px;
            cursor: pointer;
        }

        .panel {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .new-product-btn {
        
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 20px;
            cursor: pointer;
            position:relative; left:70%; top:2px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #cccccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
        td, th {
            
            text-align: center;
            align-items: center;
            
        }

        td a {
            
            color: #4CAF50;
            text-decoration: none;
            font-size: 15px;
            font-weight: bold;
        }

        td a:hover {
            color: #175019;
        }
        
    </style>
</head>
<body>
    <div class="nav1">
        <div class="nav-left"><a href="/Dash_Board_panel.html">Desh Board</a></div>
        <div class="nav-left"><a href="/data-entry/create_id_home.html">Home</a></div>
     

    </div>
    <div class="search-form">
        <form action="/online-product-search" method="GET">

            <label for="searchId">Id:</label>
            <input type="search" id="searchId" name="id">

            <label for="productName">Product Name:</label>
            <input type="search" id="productName" name="productName">

            <label for="companyName">Company:</label>
            <input type="search" id="companyName" name="companyName">

            <label for="productType">Product Type:</label>
            <select id="productType" name="productType" required>
                <option value="solid">Solid</option>
                <option value="liquid">Liquid</option>
                <option value="gas">Gas</option>
            </select>

            <input type="submit" value="Search">
        </form>
    </div>


    <div class="container">
        <h2>Product panel</h2>
    
        <table id="searchResults">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Product Pcs</th>
                    <th>Weight</th>
                    <th>Company</th>
                    <th>Product Type</th>
                    
                    <th>Singel Price</th>
                    <th>Box Price</th>
                    <th>Discount</th>
                    <th>Quantity</th>
                    <th>A.D.B.Price</th>
                    <th>Details</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% product_database.forEach(item => { %>
                  <tr>
                    <form action="/product-panel_detailes" method="GET">
                      <td><%= item.id %></td>
                      <td><%= item.productName %></td>
                      <td><%= item.ProductCount %></td>
                      <td><%= item.weight %></td>
                      <td><%= item.companyName %></td>
                      <td><%= item.productType %></td>
                      <td><%= item.single_price %></td>
                      <td><%= item.box_price %></td>
                      <td><%= item.discount %></td>
                      <td class="price" data-base-price="<%= item.a_d_b_price %>"><%= item.a_d_b_price.toFixed(2) %></td>
                      <td><input type="number" class="quantity-input" name="quantity" value="1" min="0"></td>
                      <td><a href="/online-product-details?id=<%= item.id %>">Details</a></td>
                      <td>
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit">Add</button>
                      </td>
                    </form>
                  </tr>
                <% }); %>
              </tbody>
        </table>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const quantityInputs = document.querySelectorAll(".quantity-input");

            quantityInputs.forEach(input => {
                input.addEventListener("input", function() {
                    const quantity = parseInt(this.value) || 0;
                    const row = this.closest("tr");
                    const priceCell = row.querySelector(".price");
                    const basePrice = parseFloat(priceCell.dataset.basePrice);
                    
                    const newPrice = basePrice * quantity;
                    priceCell.textContent = newPrice.toFixed(2);
                });
            });

            const forms = document.querySelectorAll("form");
            forms.forEach(form => {
                form.addEventListener("submit", function(event) {
                    event.preventDefault(); // Prevent default form submission

                    const row = this.closest("tr");
                    if (!row) {
                        console.error("Error: Row element not found.");
                        return;
                    }

                    const cells = row.querySelectorAll("td");
                    if (cells.length < 9) {
                        console.error("Error: Expected 9 cells in the row.");
                        return;
                    }

                    const data = {
                Id: cells[0].textContent.trim(),
                "Product Name": cells[1].textContent.trim(),
                "Product Pcs": cells[2].textContent.trim(),
                Weight: cells[3].textContent.trim(),
                Company: cells[4].textContent.trim(),
                "Product Type": cells[5].textContent.trim(),
                single_price: cells[6].textContent.trim(),
                box_price: cells[7].textContent.trim(),
                discount: cells[8].textContent.trim(),
                a_d_b_price: cells[9].textContent.trim(),
                Quantity: row.querySelector(".quantity-input").value.trim()
            };

                    console.log(JSON.stringify(data));
                    fetch('/submit-product', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Success:', data);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                });
            });
        });
    </script>

    
</body>
</html>
