<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales History</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

<h2 style="text-align: center;">XYZ Shop</h2>
<% if (salesHistory.length > 0) { %>
    <% salesHistory.forEach((sale, index) => { %>
        <table>
            <tr>
                <td colspan="1">Sale ID: <%= index + 1 %></td>
                <td colspan="6" style="text-align: right;">Date: <%= sale.current_time %></td>
            </tr>
            <tr>
                <th>Product Code</th>
                <th>Product Name</th>
                <th>Product Weight</th>
                <th>Product Type</th>
                <th>Company Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
            <% sale.products.forEach(product => { %>
                <tr>
                    <td><%= product.product_code %></td>
                    <td><%= product.product_name %></td>
                    <td><%= product.product_weight %></td>
                    <td><%= product.product_type %></td>
                    <td><%= product.company_name %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.price %></td>
                </tr>
            <% }); %>
            <tr>
                <th colspan="7">Summary</th>
            </tr>
            <tr>
                <td colspan="7">Total Quantity: <%= sale.total_quantity %></td>
            </tr>
            <tr>
                <td colspan="7">Total Price: <%= sale.total_price %></td>
            </tr>
            <tr>
                <td colspan="7">Discount: <%= sale.discount %></td>
            </tr>
            <tr>
                <td colspan="7">After Discount Price: <%= sale.after_discount_price %></td>
            </tr>
            <tr>
                <td colspan="7">Receive Amount: <%= sale.receive_price %></td>
            </tr>
            <tr>
                <td colspan="7">Return Amount: <%= sale.return_price %></td>
            </tr>
        </table>
    <% }); %>
<% } else { %>
    <p>No sales history available.</p>
<% } %>

</body>
</html>
