<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Panel</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #cfd9df 0%, #789caf 100%);
            margin: 0;
            padding: 0;
        }
        .nav1 {
            background: linear-gradient(135deg, #c3e9ca 0%, #77e08a 100%);
            padding: 10px;
            display: flex;
            justify-content: space-between;
            margin: 20px;
        }

        .nav-left a {
            color: rgb(34, 31, 31);
            text-decoration: none;
            padding: 8px 16px;
            display: inline-block;
            margin: 0px 30px;
            font-weight: bold;
        }

        .nav-left a:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background: linear-gradient(135deg, #c3e9ca 0%, #77e08a 100%);
            
        }
        .container {
            width: 90%;
          
            background: linear-gradient(135deg, #c3e9ca 0%, #77e08a 100%);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            text-align: center;
            color: #333333;
        }
        .search-form {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .search-form label {
            font-weight: bold;
        }
        .search-form input[type="text"],
        .search-form input[type="search"] {
            padding: 8px;
            border: 1px solid #cccccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        .search-form input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 20px;
            cursor: pointer;
        }
        
        .new-product-btn {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 20px;
            cursor: pointer;
            position:relative; left:70%; top:2px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #cccccc;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        td, th {
            text-align: center;
            align-items: center;
        }
        td a {
            color: #4CAF50;
            text-decoration: none;
            font-size: 15px;
            font-weight: bold;
        }
        td a:hover {
            color: #175019;
        }
        .container2{
            width: 95%;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="nav1">
        <div class="nav-left"><a href="/dash_board">Desh Board</a></div>
        <div class="nav-left"><a href="/e-commerce-profile">Profile</a></div>
    </div>
    <div class="container2">

        <div class="search-form">
            <form action="/e-commerce-search" method="GET">
                <label for="searchId">Id:</label>
                <input type="search" id="searchId" name="product_code">
                <label for="productName">Product Name:</label>
                <input type="search" id="productName" name="product_name">
                <label for="companyName">Company:</label>
                <input type="search" id="companyName" name="company_name">
                <label for="shopArea">Area:</label>
                <input type="search" id="shopArea" name="shop_area">
                <input type="submit" value="Search">
            </form>
        </div>
        <div class="container">
            <h2>Product Panel</h2>
            <table id="searchResults">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product Name</th>
                        <th>Weight</th>
                        <th>Product Type</th>
                        <th>Company</th>
                        <th>Shop Name</th>
                        <th>Shop Area</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% all_shop_stock.forEach(item => { %>
                      <tr>
                        <form action="/product-panel_detailes" method="GET">
                          <td><%= item.product_id %></td>
                          <td><%= item.product_name %></td>
                          <td><%= item.product_weight %></td>
                          <td><%= item.product_type %></td>
                          <td><%= item.company_name %></td>
                          <td><%= item.shop_name %></td>
                          <td><%= item.shop_area %></td>
                          <td><%= item.shop_stock %></td>
                          <td class="price" data-base-price="<%= item.price %>"><%= Number(item.price).toFixed(2) %></td>
                          <td><input type="number" class="quantity-input" name="quantity" value="1" min="0"></td>
                          <td>
                            <input type="hidden" name="id" value="<%= item.id %>">
                            <button type="submit">Add</button>
                          </td>
                        </form>
                      </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

    </div>
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const quantityInputs = document.querySelectorAll(".quantity-input");

            quantityInputs.forEach(input => {
                input.addEventListener("input", function() {
                    const quantity = parseInt(this.value) || 0;
                    const row = this.closest("tr");
                    const priceCell = row.querySelector(".price");
                    const basePrice = parseFloat(priceCell.dataset.basePrice);
                    
                    const newPrice = basePrice * quantity;
                    priceCell.textContent = newPrice.toFixed(2);
                });
            });
        });
    </script>
</body>
</html>
