<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medicine POS</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #faf7f7;
    }

    .nav1 {
      background-color: #060606;
      width: 100%;
      margin: 20px 0;
      display: flex;
      justify-content: center;
      align-items: center;
      justify-content: space-around;
    }

    .nav-left a {
      font-family: 'Dancing Script', cursive;
      font-weight: bold;
      text-decoration: none;
      color: #f3eded;
      font-size: 20px;
    }

    header {
      background-color: #4CAF50;
      color: white;
      padding: 10px;
      text-align: center;
    }

    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #f9f9f9;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #4CAF50;
      color: white;
    }

    form {
      margin-bottom: 20px;
    }

    form input[type="number"],
    form input[type="text"] {
      padding: 8px;
      margin-bottom: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      width: calc(50% - 10px);
    }

    #save-button {
      padding: 10px;
      border: none;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      cursor: pointer;
      width: 100%;
    }

    .print-history input[type="submit"] {
      padding: 10px;
      border: none;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      cursor: pointer;
      width: 50%;
    }
  </style>
</head>
<body>
  <div class="nav1">
    <div class="nav-left"><a href="/Shop pos/pos.html">Home</a></div>
    <div class="nav-left"><a href="/Shop pos/Pointofsales.html">POS</a></div>
    <div class="nav-left"><a href="/Shop pos/stoctin.html">Stock In</a></div>
    <div class="nav-left"><a href="/Shop pos/stockout.html">Stock Out</a></div>
    <div class="nav-left"><a href="/Shop pos/posinventory.html">Inventory</a></div>
    <div class="nav-left"><a href="/Shop pos/posaccounts.html">Accounts</a></div>
    <div class="nav-left"><a href="/Shop pos/poswastage.html">Wastage</a></div>
    <div class="nav-left"><a href="/Shop pos/posmarket.html">Market</a></div>
    <div class="nav-left"><a href="/Shop pos/mailbox.html">Mail</a></div>
  </div>

  <header>
    <h1>Medicine Point of Sale</h1>
  </header>

  <div class="container">
    <div class="search-form">
      <input type="number" id="id" name="id" placeholder="Product Code">
      <input type="text" id="productName" name="productName" placeholder="Product Name">
      <input type="text" name="companyName" placeholder="Company Name">
      <button onclick="search()">Search</button>
    </div>
    
    <table id="productTable">
        <thead>
          <tr>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Weight</th>
            <th>Company</th>
            <th>Quantity Pcs</th>
            <th>Stock</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody id="productTableBody">
          <!-- Table rows will be dynamically added here -->
          <% product_database.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.productName %></td>
              <td><%= item.weight %></td>
              <td><%= item.companyName %></td>
              <td>
                <form action="/updateStock" method="post">
                  <input type="hidden" name="id" value="<%= item.id %>">
                  <input type="number" name="quantity" onchange="calculatePrice(this)">
                </form>
              </td>
              <td><%= item.Stock %></td>
              <td>
                <form action="/updateStock" method="post">
                  <input type="hidden" name="id" value="<%= item.id %>">
                  <input type="number" name="price" value="<%= item.price %>">
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
</div>

<script>
  function search() {
    // Collect search parameters
    var id = document.getElementById("id").value;
    var productName = document.getElementById("productName").value;
    var companyName = document.getElementsByName("companyName")[0].value;

    // Send asynchronous request to the server
    fetch(`/Sales-product-search?id=${id}&productName=${productName}&companyName=${companyName}`)
      .then(response => response.json())
      .then(data => {
        // Clear previous search results
        document.getElementById("productTableBody").innerHTML = "";

        // Append new search results to table
        data.forEach(item => {
          var row = document.createElement("tr");
          row.innerHTML = `
            <td>${item.id}</td>
            <td>${item.productName}</td>
            <td>${item.weight}</td>
            <td>${item.companyName}</td>
            <td>
              <form action="/updateStock" method="post">
                <input type="hidden" name="id" value="${item.id}">
                <input type="number" name="quantity" onchange="calculatePrice(this)">
              </form>
            </td>
            <td>${item.Stock}</td>
            <td>
              <form action="/updateStock" method="post">
                <input type="hidden" name="id" value="${item.id}">
                <input type="number" name="price" value="${item.price}">
              </form>
            </td>
          `;
          document.getElementById("productTableBody").appendChild(row);
        });
      })
      .catch(error => console.error('Error:', error));
  }
</script>

  
    
  </body>
  </html>